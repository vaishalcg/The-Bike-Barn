@model IEnumerable<WebMVC.Models.Category>

@{
    ViewBag.Title = "Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="mb-3">
       
        <div class="container mt-4">
            <h2 class="mb-4">Category Details</h2>

            <button class="mb-3">
                @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary btn-lg mb-3" })
            </button>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Category_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Category_Name)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category_Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category_Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Category_Id }, new { @class = "btn btn-warning btn-sm" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Category_Id }, new { @class = "btn btn-info btn-sm" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Category_Id }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
